public class Check{
    private int number, reverse;
    public Check(int n){
        number = n;
        reverse = 0;
        while(n > 0){
            int rem = n % 10;
            n = n / 10;
            reverse = reverse*10 + rem;
        }
    }
    
    public boolean isDrome(){
        if(number == reverse){
            return true;
        } else {
            return false;
        }
    }
}
